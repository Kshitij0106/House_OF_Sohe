<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="6dp"
    app:cardCornerRadius="6dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <ImageView
            android:id="@+id/ordersProdImage"
            android:layout_width="145dp"
            android:layout_height="136dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/ordersProdName"
            android:layout_width="233dp"
            android:layout_height="30dp"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="Kurta"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/ordersProdImage"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="ID:"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/ordersProdImage"
            app:layout_constraintTop_toBottomOf="@+id/ordersProdName"
            app:layout_constraintVertical_bias="0.037" />

        <TextView
            android:id="@+id/ordersProdID"
            android:layout_width="183dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:padding="4dp"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/text"
            app:layout_constraintTop_toBottomOf="@+id/ordersProdName"
            app:layout_constraintVertical_bias="0.065" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="233dp"
            android:layout_height="30dp"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="Ordered On: "
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:textColor="#000"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/ordersProdImage"
            app:layout_constraintTop_toBottomOf="@+id/ordersProdID" />


        <TextView
            android:id="@+id/ordersProdDate"
            android:layout_width="233dp"
            android:layout_height="30dp"
            android:layout_marginLeft="2dp"
            android:gravity="center|start"
            android:padding="4dp"
            android:text="21-Nov-2019"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_marginTop="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/ordersProdImage"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>